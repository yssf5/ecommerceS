{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.price) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.price) }}
            </div>
        </div>
    </div>
    <div class="mb-3">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.description) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            {{ form_label(form.stock) }}
            {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.stock) }}
            </div>
        </div>
        <div class="col-md-4 mb-3">
            {{ form_label(form.size) }}
            {{ form_widget(form.size, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.size) }}
            </div>
        </div>
        <div class="col-md-4 mb-3">
            {{ form_label(form.color) }}
            {{ form_widget(form.color, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.color) }}
            </div>
        </div>
    </div>
    <div class="mb-3">
        {{ form_label(form.image) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        <div class="form-text">{{ form_help(form.image) }}</div>
        <div class="invalid-feedback">
            {{ form_errors(form.image) }}
        </div>
        {% if product.image %}
            <div class="mt-2">
                <img src="{{ asset('uploads/images/products/' ~ product.image) }}" alt="Current product image" class="img-thumbnail" style="max-height: 200px;">
            </div>
        {% endif %}
    </div>
    <div class="mb-3">
        {{ form_label(form.category) }}
        {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.category) }}
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{{ form_end(form) }}

<style>
.image-choices {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}
.form-check {
    text-align: center;
}
.form-check-label {
    display: block;
    margin-bottom: 5px;
}
</style>
